{% extends 'base.html.twig' %}

{% block title 'Projet ' ~ project.roomProjectName %}

{% block body %}
<div class="jumbotron">

    <a href="{{ path('projectRoom.edit', {id: project.id}) }}" class="btn btn-secondary">Modifier</a>

    <form  method="post" action="{{ path('projectRoom.delete', {id: project.id}) }}" style="display: inline-block" onsubmit="return confirm('Etes-vous vraiment sure?')">
        <!-- Fonctionnalité de symfony permettant de donner une méthode différante de la methode post, on mettra une methode DELETE -->
        <input type="hidden" name="_token" value="{{ csrf_token('delete') }}">
        <input type="hidden" name="_method" value="DELETE">
        <button class="btn btn-danger">Supprimer</button>
    </form>

    <div class="container">
        <h1>Projet {{project.roomProjectName}}<h1>
            Récapitulatif : <br>
            Surface {{project.roomArea}} m²<br>
            Hauteur sur plafond {{project.roomHeight}} m<br>
            Sol en {{project.groundType}}<br><br>        
    </div>
</div>

{% include 'product/paint.index.html.twig' %}<br> 

{% endblock %}
